# Configurações do Sistema Mundo em Palavras
# Copie este arquivo para .env e ajuste as configurações conforme necessário

# ===========================================
# CONFIGURAÇÕES GERAIS
# ===========================================
APP_NAME=Mundo em Palavras
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# ===========================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# ===========================================
# PostgreSQL - Usuários
POSTGRES_USERS_HOST=localhost
POSTGRES_USERS_PORT=5432
POSTGRES_USERS_DB=mundo_palavras_users
POSTGRES_USERS_USER=admin
POSTGRES_USERS_PASSWORD=admin1234

# PostgreSQL - Catálogo
POSTGRES_CATALOG_HOST=localhost
POSTGRES_CATALOG_PORT=5433
POSTGRES_CATALOG_DB=mundo_palavras_catalog
POSTGRES_CATALOG_USER=admin
POSTGRES_CATALOG_PASSWORD=admin1234

# PostgreSQL - Carrinho
POSTGRES_CART_HOST=localhost
POSTGRES_CART_PORT=5434
POSTGRES_CART_DB=mundo_palavras_cart
POSTGRES_CART_USER=admin
POSTGRES_CART_PASSWORD=admin1234

# PostgreSQL - Pedidos
POSTGRES_ORDERS_HOST=localhost
POSTGRES_ORDERS_PORT=5435
POSTGRES_ORDERS_DB=mundo_palavras_orders
POSTGRES_ORDERS_USER=admin
POSTGRES_ORDERS_PASSWORD=admin1234

# PostgreSQL - Pagamentos
POSTGRES_PAYMENTS_HOST=localhost
POSTGRES_PAYMENTS_PORT=5436
POSTGRES_PAYMENTS_DB=mundo_palavras_payments
POSTGRES_PAYMENTS_USER=admin
POSTGRES_PAYMENTS_PASSWORD=admin1234

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# CONFIGURAÇÕES DE MICROSERVIÇOS
# ===========================================
# Auth Service
AUTH_SERVICE_HOST=localhost
AUTH_SERVICE_PORT=8001
AUTH_SERVICE_URL=http://localhost:8001

# Catalog Service
CATALOG_SERVICE_HOST=localhost
CATALOG_SERVICE_PORT=8002
CATALOG_SERVICE_URL=http://localhost:8002

# Cart Service
CART_SERVICE_HOST=localhost
CART_SERVICE_PORT=8003
CART_SERVICE_URL=http://localhost:8003

# Shipping Service
SHIPPING_SERVICE_HOST=localhost
SHIPPING_SERVICE_PORT=8004
SHIPPING_SERVICE_URL=http://localhost:8004

# Payment Service
PAYMENT_SERVICE_HOST=localhost
PAYMENT_SERVICE_PORT=8005
PAYMENT_SERVICE_URL=http://localhost:8005

# Order Service
ORDER_SERVICE_HOST=localhost
ORDER_SERVICE_PORT=8006
ORDER_SERVICE_URL=http://localhost:8006

# Recommendation Service
RECOMMENDATION_SERVICE_HOST=localhost
RECOMMENDATION_SERVICE_PORT=8007
RECOMMENDATION_SERVICE_URL=http://localhost:8007

# ===========================================
# CONFIGURAÇÕES DE FRONTEND
# ===========================================
FRONTEND_HOST=localhost
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000

# ===========================================
# CONFIGURAÇÕES DE API GATEWAY
# ===========================================
API_GATEWAY_HOST=localhost
API_GATEWAY_PORT=8080
API_GATEWAY_URL=http://localhost:8080

# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ===========================================
# JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Criptografia
SECRET_KEY=your-super-secret-key-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# ===========================================
# CONFIGURAÇÕES DE INTEGRAÇÃO
# ===========================================
# Correios API
CORREIOS_API_URL=https://api.correios.com.br
CORREIOS_API_KEY=your-correios-api-key

# Gateway de Pagamento
PAYMENT_GATEWAY_URL=https://api.payment-gateway.com
PAYMENT_GATEWAY_KEY=your-payment-gateway-key
PAYMENT_GATEWAY_SECRET=your-payment-gateway-secret

# Stripe (exemplo)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# ===========================================
# CONFIGURAÇÕES DE EMAIL
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# ===========================================
# CONFIGURAÇÕES DE LOG
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=logs/mundo-palavras.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ===========================================
# CONFIGURAÇÕES DE CACHE
# ===========================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ===========================================
# CONFIGURAÇÕES DE RATE LIMITING
# ===========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ===========================================
# CONFIGURAÇÕES DE CORS
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*
